---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import PricingCard from "@/components/pricing.astro";

const pricing = [
  {
    name: "Self-Hosted",
    price: "Free",
    popular: false,
    features: [
      "Unlimited cohorts",
      "Unlimited learners",
      "Full source code access",
      "Your own infrastructure",
      "Community support",
      "MIT licensed forever",
    ],
    button: {
      text: "View on GitHub",
      link: "https://github.com/EduMyna/EduMyna",
    },
  },
  {
    name: "Managed",
    price: {
      monthly: "$49",
      annual: "$39",
      discount: "20%",
      original: "$49",
    },
    popular: true,
    features: [
      "Up to 500 learners",
      "Unlimited cohorts",
      "Managed hosting",
      "Automatic backups",
      "Email support",
      "Custom domain",
    ],
    button: {
      text: "Start free trial",
      link: "/contact",
    },
  },
  {
    name: "Scale",
    price: "Custom",
    popular: false,
    features: [
      "Unlimited learners",
      "Unlimited cohorts",
      "Dedicated infrastructure",
      "SSO & API access",
      "Onboarding support",
      "SLA & priority support",
    ],
    button: {
      text: "Talk to us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Self-host for free, or let us run it. No per-seat pricing games.
      </Fragment>
    </Sectionhead>

    <div
      class="grid md:grid-cols-3 gap-10 mx-auto max-w-(--breakpoint-lg) mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
