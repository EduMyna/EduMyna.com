---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Cohort-ready structure",
    description: "Run cohorts with clear modules, lessons, milestones, and progression.",
    icon: "bx:bxs-group",
  },
  {
    title: "Feedback loops that matter",
    description: "Collect submissions, review work, and help learners improve through iteration.",
    icon: "bx:bxs-message-rounded-dots",
  },
  {
    title: "Online-first by default",
    description: "Designed for distributed delivery, with the workflow built around remote learning realities.",
    icon: "bx:bxs-cloud",
  },
  {
    title: "Open-source core",
    description: "Transparent, forkable, and extensible. You can self-host and customize it for your context.",
    icon: "bx:bxl-github",
  },
  {
    title: "Built from constraints, not theory",
    description: "Shaped by real education operations: scale, quality, and systems that do not break easily.",
    icon: "bx:bxs-shield",
  },
  {
    title: "Hosted option available",
    description: "If you want a managed version with support, use the hosted plan and focus on delivery.",
    icon: "bx:bxs-server",
  },
];
---

<section id="features" class="mt-16 md:mt-0 scroll-mt-24">
  <div>
    <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
      Built for educators who ship, not just plan
    </h2>
    <p class="text-lg mt-4 text-slate-600 max-w-3xl">
      EduMyna is for people running real programs who need structure, accountability, and iteration without heavyweight enterprise complexity.
    </p>
  </div>

  <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
    {
      features.map((item) => (
        <div class="flex gap-4 items-start">
          <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0">
            <Icon class="text-white" name={item.icon} />
          </div>
          <div>
            <h3 class="font-semibold text-lg">{item.title}</h3>
            <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>