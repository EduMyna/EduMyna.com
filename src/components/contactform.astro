---
import Button from "./ui/button.astro";
---

<form
  name="contact"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  action="/contact?success=1"
  class="space-y-5"
>
  <input type="hidden" name="form-name" value="contact" />
  <p class="hidden">
    <label>
      Don’t fill this out: <input name="bot-field" />
    </label>
  </p>

  <div>
    <label class="block text-sm font-medium text-slate-700 mb-2" for="name">Name</label>
    <input
      id="name"
      name="name"
      type="text"
      required
      class="w-full rounded-md border border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-900/20"
      placeholder="Your name"
    />
  </div>

  <div>
    <label class="block text-sm font-medium text-slate-700 mb-2" for="email">Email</label>
    <input
      id="email"
      name="email"
      type="email"
      required
      class="w-full rounded-md border border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-900/20"
      placeholder="you@domain.com"
    />
  </div>

  <div>
    <label class="block text-sm font-medium text-slate-700 mb-2" for="org">Organisation</label>
    <input
      id="org"
      name="organisation"
      type="text"
      class="w-full rounded-md border border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-900/20"
      placeholder="Optional"
    />
  </div>

  <div>
    <label class="block text-sm font-medium text-slate-700 mb-2" for="message">Message</label>
    <textarea
      id="message"
      name="message"
      rows="6"
      required
      class="w-full rounded-md border border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-900/20"
      placeholder="Describe what you’re running, scale, constraints, and what you want to achieve."
    ></textarea>
  </div>

  <div class="pt-2">
    <Button type="submit" size="lg" class="w-full">Send message</Button>
    <p class="mt-3 text-xs text-slate-500 text-center">
      This form is powered by Netlify Forms on deployment.
    </p>
  </div>
</form>