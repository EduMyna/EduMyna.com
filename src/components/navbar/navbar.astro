---
import Container from "@/components/container.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  { title: "Home", path: "/" },
  { title: "Features", path: "/#features" },
  { title: "Pricing", path: "/pricing" },
  { title: "Story", path: "/story" },
  { title: "Consulting", path: "/consulting" },
  { title: "GitHub", path: "https://github.com/EduMyna/EduMyna", external: true },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg font-semibold tracking-tight">
          <span class="text-slate-900">Edu</span><span class="text-slate-500">Myna</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>

      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-1">
          {
            menuitems.map((item) => (
              <li>
                <a
                  href={item.path}
                  target={item.external ? "_blank" : undefined}
                  rel={item.external ? "noopener noreferrer" : undefined}
                  class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                  <span>{item.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>

    <div class="hidden lg:flex items-center gap-3">
      <a
        href="/contact"
        class="text-sm font-medium text-gray-600 hover:text-gray-900">
        Contact
      </a>
      <a
        href="/pricing"
        class="inline-flex items-center justify-center rounded-md bg-black px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800">
        See pricing
      </a>
    </div>
  </header>
</Container>